<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mapprr.deepak.gitsearch">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.GitSearchActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RepoDetailActivity"
            android:label="@string/title_activity_repo_detail" >
        </activity>
        <activity
            android:name=".activities.ContributorActivity"
            android:label="@string/title_activity_contributor" >
        </activity>
        <activity
            android:name=".activities.WebviewActivity"
            android:label="@string/title_activity_webview" >
        </activity>
    </application>

</manifest>